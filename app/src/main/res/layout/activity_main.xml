<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/website"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Open Website"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/website_button"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:text="Open Website"
        android:onClick="openwebsite"
        android:textAllCaps="true"
        android:backgroundTint="@color/colorAccent"
        app:layout_constraintEnd_toEndOf="@+id/website"
        app:layout_constraintStart_toStartOf="@id/website"
        app:layout_constraintTop_toBottomOf="@id/website" />

    <EditText
        android:id="@+id/dialpad"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:hint="Open Dialpad"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="@+id/website_button"
        app:layout_constraintStart_toStartOf="@+id/website_button"
        app:layout_constraintTop_toBottomOf="@+id/website_button"/>

    <Button
        android:id="@+id/dialpad_button"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:text="Open Dialpad"
        android:onClick="opendialpad"
        android:textAllCaps="true"
        android:backgroundTint="@color/colorAccent"
        app:layout_constraintEnd_toEndOf="@+id/dialpad"
        app:layout_constraintStart_toStartOf="@id/dialpad"
        app:layout_constraintTop_toBottomOf="@id/dialpad" />

    <EditText
        android:id="@+id/maps"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:hint="Open Location"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@id/dialpad_button"
        app:layout_constraintStart_toStartOf="@id/dialpad_button"
        app:layout_constraintTop_toBottomOf="@id/dialpad_button"/>

    <Button
        android:id="@+id/map_button"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:text="Open Google Maps"
        android:onClick="openmap"
        android:textAllCaps="true"
        android:backgroundTint="@color/colorAccent"
        app:layout_constraintEnd_toEndOf="@id/maps"
        app:layout_constraintStart_toStartOf="@id/maps"
        app:layout_constraintTop_toBottomOf="@id/maps" />

    <EditText
        android:id="@+id/share"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:hint="Share Text"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/map_button"
        app:layout_constraintStart_toStartOf="@+id/map_button"
        app:layout_constraintTop_toBottomOf="@+id/map_button" />

    <Button
        android:id="@+id/share_button"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:text="Share Text"
        android:onClick="shareText"
        android:textAllCaps="true"
        android:backgroundTint="@color/colorAccent"
        app:layout_constraintEnd_toEndOf="@id/share"
        app:layout_constraintStart_toStartOf="@id/share"
        app:layout_constraintTop_toBottomOf="@id/share" />



</androidx.constraintlayout.widget.ConstraintLayout>